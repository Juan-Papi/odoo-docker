      <field name="model">pruebamjp.curso_materia</field>
      <field name="arch" type="xml">

        <tree>
          <field name="curso_nombre" />
          <field name="curso_paralelo"></field>
        
          <field name="materia_nombre" />
          <field name="profesor_nombre" />
          <field name="ciclo_nombre" />
          <field name="hora_inicio" />
          <field name="year" /> 
          </tree>
      </field>
    </record>

   
