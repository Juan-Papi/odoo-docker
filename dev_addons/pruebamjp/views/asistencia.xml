<odoo>
  <data>
    <record model="ir.ui.view" id="pruebamjp.asistencia_index">
      <field name="name">pruebamjp asistencia list</field>
      <field name="model">pruebamjp.asistenciawizard</field>
      <field name="arch" type="xml">

        <tree>
         <!--  <field name="nombre" />
 -->
        </tree>
      </field>
    </record>

    <!-- Vista de Formulario -->
    <record id="view_asistencia_wizard_form" model="ir.ui.view">
    <field name="name">asistencia.wizard.form</field>
    <field name="model">pruebamjp.asistenciawizard</field>
    <field name="arch" type="xml">
        <form string="Registrar Asistencia">
            <group>
                <field name="curso_materia_id"/>
            </group>
            <group>
                <field name="asistencia_line_ids">
                    <tree editable="bottom">
                        <field name="estudiante_id"/>
                        <field name="curso_materia_id" invisible="1"/>
                        <field name="fecha"/>
                        <field name="asistio"/>
                    </tree>
                </field>
            </group>
            <footer>
                <!-- <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                <button string="Cancelar" class="btn-secondary" special="cancel"/> -->
            </footer>
        </form>
    </field>
</record>

<record id="pruebamjp.action_asistencia_window" model="ir.actions.act_window">
    <field name="name">Registrar Asistencia</field>
    <field name="res_model">pruebamjp.asistenciawizard</field>
    <field name="view_mode">form</field>
    
</record> 

  </data>
</odoo>