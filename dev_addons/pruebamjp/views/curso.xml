    <record model="ir.ui.view" id="pruebamjp.curso_index">
      <field name="name">gestion curso list</field>
      <field name="model">pruebamjp.curso</field>
      <field name="arch" type="xml">

        <tree>
          <field name="nombre" />

        </tree>
      </field>
    </record>

    <!-- Vista de Formulario -->
